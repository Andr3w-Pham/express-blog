{{#each blogs}}
<div class="card">
  <div class="card-content">
    <h4>{{title}}</h4>
    <p>{{description}}</p>
    <br>

      <button class="btn black"><a href="/blogs/{{id}}/edit">Edit</a></button>
      <br><br>
      <form class="" action="/blogs/{{id}}?_method=DELETE" method="post">
        <input type="hidden" name="_method" value="DELETE">
        <button class="waves-effect waves-light btn" type="submit" name="button">Delete</button>
      </form>
    
  </div>
</div>
{{else}}
  <h1>No Blogs Posted</h1>
{{/each}}
